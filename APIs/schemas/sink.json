{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Describes a sink",
  "title": "Sink resource",
  "allOf": [
    { "$ref": "resource_core.json" },
    {
      "type": "object",
      "required": [
        "edid",
        "edid_binary_href"
      ],
      "properties": {
        "edid": {
          "$ref": "edid.json"
        },
        "edid_binary_href": {
          "description": "HTTP(S) accessible URL to a binary EDID file.",
          "type": ["string", "null"],
          "format": "uri"
        }
      }
    }
  ]
}
