{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "version",
    "manufacturer",
    "manufacture_week",
    "manufacture_year",
    "edid_binary_href",
    "screen_size",
    "gamma",
    "display_type",
    "established_timings"
  ],
  "properties": {
    "version": {
      "description": "String formatted TAI timestamp (<seconds>:<nanoseconds>) indicating precisely when an attribute of the resource last changed",
      "type": "string",
      "pattern": "^[0-9]+:[0-9]+$"
    },
    "edid_binary_href": {
      "description": "HTTP(S) accessible URL to a binary EDID file.",
      "type": ["string", "null"],
      "format": "uri"
    },
    "manufacturer": {
      "type": "string"
    },
    "manufacture_week": {
      "type": "integer"
    },
    "manufacture_year": {
      "type": "integer"
    },
    "screen_size": {
      "type": "object",
      "required": [
        "width",
        "height"
      ],
      "properties": {
        "width": {
          "description": "Horizontal screen size, in centimetres",
          "type": "integer"
        },
        "height": {
          "description": "Vertical screen size, in centimetres",
          "type": "integer"
        }
      }
    },
    "gamma": {
      "type": "number"
    },
    "display_type": {
      "description": "Digital display type in terms of supported subsampling modes",
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "uniqueItems": true,
      "contains": {
        "const": "RGB444"
      },
      "items": {
        "type": "string",
        "enum": [
          "RGB444",
          "YUV444",
          "YUV422"
        ]
      }
    },
    "established_timings": {
      "type": "array",
      "items": {
        "$ref": "edid_timing.json"
      }
    },
    "standard_timings": {
      "type": "array",
      "items": {
        "$ref": "edid_timing.json"
      }
    },
    "detailed_timings": {
      "type": "array",
      "items": {
        "$ref": "edid_timing.json"
      }
    },
    "cta_861_timings": {
      "type": "array",
      "items": {
        "$ref": "edid_timing.json"
      }
    }
  }
}
